{
  "semi": false,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "insertPragma": true
      }
    },
    {
      "files": "*.hbs",
      "options": {
        "tabWidth": 2,
        "useTabs": true,
        "bracketSameLine": false,
        "singleQuote": false,
        "insertPragma": true
      }
    }
  ]
}
